# Database Configuration
POSTGRES_HOST=bell-notification-db
POSTGRES_PORT=5432
POSTGRES_DB=bell_notifications_db
POSTGRES_USER=belluser
POSTGRES_PASSWORD=bellpass
BELL_NOTIFICATION_DB_CONNECTION=Host=bell-notification-db;Database=bell_notifications_db;Username=belluser;Password=bellpass;Include Error Detail=true

# Stream Token Configuration (for SSE stream access)
# These are used internally by the service to generate short-lived tokens for SSE connections
JWT_STREAM_TOKEN_SIGNING_KEY=your-secret-signing-key-change-in-production-min-32-chars
JWT_STREAM_TOKEN_EXPIRATION_MINUTES=60

# Keycloak JWT Bearer Authentication
KEYCLOAK_AUTHORITY=http://keycloak:8080/realms/DMSRealm
KEYCLOAK_CLIENTID=auth-app
KEYCLOAK_REQUIRE_HTTPS_METADATA=false

# Features
FEATURES_ALLOW_INTERNAL_NOTIFICATION_CREATION=true

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

# Enable Swagger UI (set to "true" to enable in non-Development environments)
ENABLE_SWAGGER=true

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092
BELL_NOTIFICATION_KAFKA_TOPICS=BellNotifications
BELL_NOTIFICATION_KAFKA_GROUP_ID=bell-notification-service-group
BELL_NOTIFICATION_KAFKA_AUTO_OFFSET_RESET=Earliest
BELL_NOTIFICATION_KAFKA_ENABLE_AUTO_COMMIT=false
BELL_NOTIFICATION_KAFKA_AUTO_COMMIT_INTERVAL_MS=5000
BELL_NOTIFICATION_KAFKA_RECONNECT_BACKOFF_MS=100
BELL_NOTIFICATION_KAFKA_RECONNECT_BACKOFF_MAX_MS=1000
BELL_NOTIFICATION_KAFKA_SESSION_TIMEOUT_MS=30000
BELL_NOTIFICATION_KAFKA_MAX_POLL_INTERVAL_MS=300000
BELL_NOTIFICATION_KAFKA_API_VERSION_REQUEST_TIMEOUT_MS=10000

